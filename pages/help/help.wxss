/* help.wxss */

.help-center-wrap {
    background: #f6f6f6;
    min-height: 100vh;
}

.help-center-wrap .header {
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    background-color: #f6f6f6;
    padding: 0 44rpx;
    font-size: 12px;
    color: #616161;
}

.help-center-wrap .links-wrap {
    background: #fff;
}

.help-center-wrap .links {
    font-size: 14px;
    line-height: 28px;
    background: #fff;
}

.help-center-wrap .links .link-title {
	border-bottom: 1px solid #f1f1f1;
	line-height: 3.25;
	background: #fff;
	margin-left: 30rpx;
}

.help-center-wrap .links:last-child .link-title {
    border: none;
}

.links-wrap {
    margin-top: -14rpx;
}

.content-item {
	line-height: 1.5;
	padding: 0 30rpx;
	color: #999;
	background: #fff;
}

.content-item-inner {
   border-bottom: 4rpx solid #f6f6f6;
   padding: 10rpx 0;
}

.item-block {
	border-bottom: 10rpx solid #e6e6e6;
}