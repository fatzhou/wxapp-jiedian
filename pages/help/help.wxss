/* help.wxss */

.help-center-wrap {
    background: #f6f6f6;
    min-height: 100vh;
}

.help-center-wrap .header {
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    background-color: #f6f6f6;
    padding: 0 44rpx;
    font-size: 24rpx;
    color: #616161;
    border-bottom: 1rpx solid #e6e6e6;
}

.help-center-wrap .links-wrap {
    background: #fff;
}

.help-center-wrap .links {
    font-size: 24rpx;
    line-height: 3;
    border-bottom: 1px solid #f1f1f1;
    background: #fff;
}

.help-center-wrap .links .link-title {
	border-bottom: 1px solid #f1f1f1;
	line-height: 3.25;
	background: #fff;
	margin: 0 30rpx;
}

.links-wrap {
    margin-top: 20rpx;
    border-top: 1px solid #e6e6e6;
}

.content-item {
	line-height: 1.5;
	padding: 20rpx 30rpx;
	color: #999;
	border-bottom: 10rpx solid #f6f6f6;
	background: #fff;
}

.item-block {
	border-bottom: 10rpx solid #e6e6e6;
}