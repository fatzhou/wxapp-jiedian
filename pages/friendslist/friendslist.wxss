/* friendslist.wxss */
.recommend-wrap .section .content {
    padding: 32rpx 0;
    font-size: 24rpx;
    color: #212121;
    line-height: 1.75;
}

.recommend-wrap .section .friend {
    height: 96rpx;
    display: flex;
    margin-bottom: 32rpx;
}

.recommend-wrap .section .avatar {
    display: block;
    width: 96rpx;
    height: 96rpx;
    border-radius: 8rpx;
    overflow: hidden;
}

.recommend-wrap .section .avata image {
    width: 100%;
    height: 100%;
}

.recommend-wrap .detail {
    flex: 1;
    margin-left: 24rpx;
}

.recommend-wrap .detail .name,  .recommend-wrap .detail .time {
    height: 48rpx;
    line-height: 48rpx;
    font-size: 32rpx;
}

.recommend-wrap .detail .name {
    color: #212121;
}

.recommend-wrap .detail .time {
    color: #999;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}


.recommend-wrap .amount {
    width: 80rpx;
    text-align: right;
    line-height: 96rpx;
    font-size: 32rpx;
}