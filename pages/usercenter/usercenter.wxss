/* usercenter.wxss */
.my-wrap {
	background: #f1f1f1;
}

.header {
	position: relative;
	height: 480rpx;
	overflow: hidden;
}

.bg-header {
	width:960rpx;
	height:522rpx;
	display:inline-block;
	overflow:hidden;
