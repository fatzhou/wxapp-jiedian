/* recommend.wxss */

.recommend-wrap {
    background-color: #fff;
    padding-bottom: 40rpx;
    height: 100%;
}

.recommend-wrap .header {
    position: relative;
    overflow: hidden;
}

.recommend-wrap .header image {
    width: 100%;
    position: relative;
    top: -2rpx;
}

.recommend-wrap .header .board {
    position: absolute;
    bottom: 14rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 336rpx;
    border-radius: 8rpx 8rpx 0 0;
}

.recommend-wrap .header .tips {
    height: 64rpx;
    line-height: 96rpx;
    text-align: center;
    font-size: 14rpx;
}

.recommend-wrap .header strong {
    font-size: 16rpx;
    color: #FF8400;
}

.recommend-wrap .section {
    width: 100%;
    padding: 0 32rpx;
    box-sizing: border-box;
    margin-top: 32rpx;
}

.recommend-wrap .section .title {
    position: relative;
    height: 40rpx;
    background-image: url(http://7xpceu.com1.z0.glb.clouddn.com/line.png);
    background-size: 100% 40%;
    background-repeat: no-repeat;
    background-position-y: 50%;
}

.recommend-wrap .section .text {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: inline-block;
    background-color: #fff;
    padding: 0 24rpx;
    line-height: 40rpx;
    color: #669fec;
    font-size: 32rpx;
    white-space: nowrap;
}

.recommend-wrap .section .content {
    padding: 32rpx 0;
    font-size: 24rpx;
    color: #212121;
    line-height: 1.75;
}

.recommend-wrap .section .friend {
    height: 96rpx;
    display: flex;
    margin-bottom: 32rpx;
}

.recommend-wrap .section .avatar {
    display: block;
    width: 96rpx;
    height: 96rpx;
    border-radius: 8rpx;
    overflow: hidden;
}

.recommend-wrap .section .avata image {
    width: 100%;
    height: 100%;
}

.recommend-wrap .detail {
    flex: 1;
    margin-left: 24rpx;
}

.recommend-wrap .detail .name,  .recommend-wrap .detail .time {
    height: 48rpx;
    line-height: 48rpx;
    font-size: 32rpx;
}

.recommend-wrap .detail .name {
    color: #212121;
}

.recommend-wrap .detail .time {
    color: #999;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}


.recommend-wrap .amount {
    width: 80rpx;
    text-align: right;
    line-height: 96rpx;
    font-size: 32rpx;
}

.recommend-wrap .check-more {
    width: 100%;
    text-align: right;
    color: #0085EE;
    text-decoration: underline;
    font-size: 32rpx;
    line-height: 1.5;
    margin-top: -20rpx;
}

.recommend-wrap .share-mask {
    position: fixed;
    top: 0;
    height: 0;
    width: 100%;
    height: 100%;
    background-image: url(http://7xpceu.com1.z0.glb.clouddn.com/share.png);
    background-size: 100% 100%;
}

.recommend-wrap .section .no-bottom {
    margin-bottom: 0;
}