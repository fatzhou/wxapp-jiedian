/* pages/recharge/recharge.wxss */
page{
  height: 100%;
}
.recharge-wrap{
  background-color: #f4f4f4;
  height: 100%;
}
.header{
  width: 100%;
  background-color: #fff;
  overflow: hidden;
  padding: 0 16px;
  box-sizing: border-box;
}
image{
  width: 100%;
  height: 100%;
}
.big-sign{
  margin: 32px auto 0;
  text-align: center;
  width: 64px;
  height: 64px;
}

.big-sign .iconfont{
  color: #FFC502;
  font-size: 48rpx;
}

.msg{
  margin-top: 16px;
  text-align: center;
  color: #212121;
}

.amount{
  margin: 16px 0;
  text-align: center;
  color: #0085EE;
  font-size: 32px;
}

.reminds{
  border-top: 1px solid #F2F2F2;
  text-align: center;
  height: 64px;
  line-height: 64px;
  font-size: 12px;
  color: #757575;
}

.reminds .iconfont{
  color: #757575;
  margin-right: 2px;
}

.reminds .icon-apple{
  font-size: 18px;
}

.reminds .icon-andriod{
  position: relative;
  top: 1px;
}

.reminds .icon-shujuxian{
  position: relative;
  top: 1px;
}

.recharge-tips{
  margin-top: 8px;
  text-align: center;
  color: #999;
  font-size: 14px;
}

.recharge-tips span{
  color: #0085ee;
}

.button{
  margin: 16px auto;
  width: 86%;
  text-align: center;
  color: #fff;
  background-color: #0085EE;
  border-radius: 6px;
  font-size: 14px;
  padding: 18px 0;
}

.tips{
  padding: 0 16px;
  color: #999999;
  font-size: 14px;
}

.tips .para{
  margin-top: 12px;
}

/*
  vux
*/
.vux-divider{
  margin: 8px auto 0;
  padding-left: 16px;
  padding-right: 16px;
  font-size: 14px;
  width: 86%;
}


.vux-divider {
  display: table;
  white-space: nowrap;
  height: auto;
  overflow: hidden;
  line-height: 1;
  text-align: center;
  padding: 10px 0;
  color: #666;
}

.vux-divider:after,.vux-divider:before {
  content: '';
  display: table-cell;
  position: relative;
  top: 50%;
  width: 50%;
  background-repeat: no-repeat;
  background-image: url(data:image/png;base64,)
}

.vux-divider:before {
  background-position: right 1em top 50%
}

.vux-divider:after {
  background-position: left 1em top 50%
}