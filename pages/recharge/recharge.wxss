/* pages/recharge/recharge.wxss */
page{
  height: 100%;
}
.recharge-wrap{
  background-color: #f4f4f4;
  height: 100%;
}
.header{
  width: 100%;
  background-color: #fff;
  overflow: hidden;
  padding: 0 16px;
  box-sizing: border-box;
}
image{
  width: 100%;
  height: 100%;
}
.big-sign{
  margin: 32px auto 0;
  text-align: center;
  width: 64px;
  height: 64px;
}

.big-sign .iconfont{
  color: #FFC502;
  font-size: 48rpx;
}

.msg{
  margin-top: 16px;
  text-align: center;
  color: #212121;
  font-size: 24rpx;
}

.amount{
  margin: 16px 0;
  text-align: center;
  color: #0085EE;
  font-size: 28px;
}

.reminds{
  border-top: 1px solid #F2F2F2;
  text-align: center;
  height: 64px;
  line-height: 64px;
  font-size: 28rpx;
  color: #757575;
}

.reminds .iconfont{
  color: #757575;
  margin-right: 2px;
}

.reminds .icon-apple{
  font-size: 18px;
}

.reminds .icon-andriod{
  position: relative;
  top: 1px;
}

.reminds .icon-shujuxian{
  position: relative;
  top: 1px;
}

.recharge-tips{
  margin-top: 8px;
  margin-bottom: 16px;
  text-align: center;
  color: #999;
  font-size: 12px;
}

.recharge-tips span{
  color: #0085ee;
}

.desc-area {
  background: #f4f4f4;
  padding: 45rpx 30rpx 0;
}

.deposit-btn {
  background: #0085EE;
  color: #61b2f3;
  margin-bottom: 20rpx;
}



.tip-title {
  color: #a6a6a6;
  position: relative;
  text-align: center;
}

.tip-title .tip-title-word {
  position:relative;
  font-size:.8em;
  line-height:1.75;
  display:inline-block;
  padding:20rpx 40rpx;
  z-index:9999;
  background: #f4f4f4;
}

.tip-title .border {
  position: absolute;
  bottom: 44rpx;
  z-index: 9999;
  width: 70%;
  left: 15%;
  height: 1px;
  background: #dbdbdb;
  z-index: 1;
}

.tips {
  color: #a6a6a6;
  font-size: 24rpx;
  line-height: 1.5;

}

.tips .text {
  padding: 8rpx 0;  
}

/* 以下是充值协议 */
.protocol-content {
  height: 100vh;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9999;
  background: rgba(0, 0, 0, .15);
}

.main-content {
  height: 50vh;
  top: 25vh;
  left: 3%;
  width: 90%;
  background: #fff;
  color: #666;
  position: absolute;
  border-radius: 5px;
  font-size: 24rpx;
  line-height: 1.75;
  margin-top: -50rpx;
  padding: 100rpx 2% 40rpx;
  box-sizing: content-box;
}

.main-content .title {
  position: absolute;
  top: -20rpx;
  left: 0;
  width: 100%;
  height: 60rpx;
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
}

.main-content .title image {
  width: 400rpx;
  height: 100%;
}

.main-content .title .word {
  position: absolute;
  top: 0;
  width: 100%;
  left: 0;
  line-height: 60rpx;
}

.main-content .close-wrap {
  position: absolute;
  top: -130rpx;
  right: 20rpx;
  height: 130rpx;
  width: 56rpx;
}

.main-content .close-wrap image {
  width: 100%;
  height: 100%;
}

.scroll-content {
  height: 50vh;
}

.scroll-content .sub-title {
  color: #0d6dea;
  padding-top: 30rpx;
}
/* 充值协议结束 */
