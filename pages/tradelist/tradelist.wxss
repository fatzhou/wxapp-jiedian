.trade-list-wrap {
    overflow: hidden;
    background: #f1f1f1;
    min-height: 100vh;
}

.trade-list-wrap .content {
    margin-top: 96rpx;
}


.trade-list-wrap .header {
    position: fixed;
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    background-color: #f6f6f6;
    padding: 0 44rpx;
    font-size: 26rpx;
    /*border-bottom: 1rpx solid #e6e6e6;*/
}

.trade-list-wrap .header span {
    margin-right: 25rpx;
}

.trade-list-wrap .header .iconfont {
    float: right;
    font-size: 20rpx;
}

.no-more {
    color: #bbb;
    font-size: 24rpx;
    line-height: 4;
    text-align: center;
}


/* item area start*/

.trade-list-item {
    background-color: #fff;
    padding: 24rpx 0;
    box-sizing: border-box;
    overflow: hidden;
    border-top: 14rpx solid #ececec;
}

.trade-list-item .section {
    width: 150rpx;
    text-align: center;
    height: 84rpx;
    line-height: 84rpx;
    padding-top: 6rpx;
    font-size: 36rpx;
    color: #0085EE;
    border-right: 1px solid #E6E6E6;
    float: left;
}

.trade-list-item .detail {
    padding: 0 16rpx;
    line-height: 48rpx;
    float: left;
    width: 459rpx;
    box-sizing: border-box;
}

.trade-list-item .order-code {
    font-size: 28rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    color: #212121;
}

.trade-list-item .order-time {
    font-size: 20rpx;
    color: #757575;
}

.trade-list-item .amount {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    white-space: nowrap;
    width: 140rpx;
    text-align: left;
    float: left;
}


.trade-status-1  .amount, .trade-status-1 .section {
    color: #0085EE;
}

.trade-status-0  .amount, .trade-status-0  .section {
    color: #FF9800;
}

/* item area end*/

/* 提现条目 */
.trade-list-view {
    border-top: 20rpx solid #ececec;
    background: #fff;
    position: relative;
}

.trade-list-view .display-btn {
    position: absolute;
    bottom: 32rpx;
    font-size: 12px;
    color: #212121;
    line-height: 32rpx;
    height: 32rpx;
    right: 44rpx;
}

.trade-list-view .display-btn .iconfont {
    vertical-align: middle;
}
/* 提现条目结束 */

/* 提现详情 */
.deposit-result-area {
    overflow: hidden;
    margin: 0 44rpx;
    padding: 44rpx 0 12rpx;
    border-bottom: 1px solid #ececec;
}
.deposit-result-area .image-area {
    float: left;
    width: 30rpx;
    height: 254rpx;
}

.deposit-result-area .word-area {
    float: left;
    margin-left: 20rpx;
    margin-top: -8rpx;
}

.word-process {
    padding-bottom: 35rpx;
}

.word-process-first {
    color: #212121;
    font-size: 15px;
    line-height: 21px;
}

.active {
    color: #0085ee;
}

.word-process-second {
    font-size: 12px;
    color: #616161;
    margin-top: 6px;
}

/* 提现详情结束 */

.trade-info {
    padding: 40rpx 44rpx 0rpx;
    overflow: hidden;
}

.trade-info .trade-amount {
    color: #0085ee;
    font-size: 16px;
    line-height: 22px;
    float: left;
}

.trade-info .status {
    float: right;
    color: #FC2464;
    font-size: 15px;
    line-height: 21px;
    float: right;
    font-weight: bold;
}

.trade-info .status-recharge {
    color: #ff9800;
}

.trade-info .status-processing {
    color: #fc2464;
}

.trade-info .status-success {
    color: #0085ee;
}

.trade-info .status-close {
    color: #999;
}

.trade-info .status-error {
    color: #ff0000;
}

.deposit-status {
    font-size: 12px;
    line-height: 20px;
    color: #757575;
    padding: 28rpx 44rpx;
}

.trade-info .recharge-style {
    color: #ff9800;
}

.trade-info .deposit-style {
    color: #0085ee;
}